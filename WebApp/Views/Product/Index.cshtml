@using WebApp.Common
@model IEnumerable<WebApp.Models.Product>
@{
    ViewBag.Title = "Index";
}

@section Styles{
    @Styles.Render("~/Content/AdminCss")

    <!----webfonts--->
    <link href='//fonts.googleapis.com/css?family=Cabin:400,400italic,500,500italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
    <!---//webfonts--->
    <!-- Meters graphs -->
    <!-- Placed js at the end of the document so the pages load faster -->
}

@section Scripts{
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <!-- chart -->
    <script src="~/Content/Admin/js/Chart.js"></script>
    <!-- //chart -->
    <script src="~/Content/Admin/js/wow.min.js"></script>

    <!--//end-animate-->
    <script src="~/Content/Admin/js/jquery-1.10.2.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/media/js/jquery.dataTables.js"></script>

}

@section JsFooter{
<script type="text/javascript">
        $(document)
            .ready(function () {
                $('#tblAccount')
                    .DataTable({
                        responsive: true
                    });
                $('#tblAccount').off('click').on('click', 'btn-approve',
                    function (e) {
                        e.preventDefault();
                        var btn = $(this);
                        var text = btn.text();
                        var url;
                        if (text == ("@Constant.Ban")) {
                            url = "/Account/BanAccount";
                        } else {
                            url = "/Account/UnbanAccount";
                        }

                        var idUser = btn.data('id');
                        $.ajax({
                            url: url,
                            data: { id: idUser },
                            dataType: "json",
                            type: "POST",
                            success: function (response) {
                                var result = response.status;
                                if (result) {
                                    if (text == ("@Constant.Ban")) {
                                        $('#role-' + idUser).text("@Constant.Ban");
                                        btn.text('UNBAN');
                                    } else {
                                        $('#role-' + idUser).text("@Constant.Customer");
                                        btn.text('BAN');
                                    }

                                }
                            }
                        });
                    });

            });
</script>
    <script src="~/Content/Admin/js/jquery.nicescroll.js"></script>
    <script src="~/Content/Admin/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
}

<div id="page-wrapper">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Account Manage</h3>
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div class="responsive-table">
                    <table id="tblAccount" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="info">IMAGE</th>
                                <th class="info">PRODUCT NAME</th>
                                <th class="info">PRICE</th>
                                <th class="info">DISCOUNT</th>
                                <th class="info">DESCRIPTION</th>
                                <th class="info">STATUS</th>
                                <th class="info"></th>
                                <th class="info"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td id="image-@item.id">
                                        <div class="center-block">
                                            <img src="@item.image" class="img-responsive" style="max-width: 100px; height: auto; margin: auto" />
                                        </div>
                                    </td>
                                    <td class="text-center" id="product-@item.id">@item.name</td>
                                    <td id="price-@item.id" class="text-center">@(item.price.ToString("N0") + " VND")</td>
                                    <td id="discount-@item.id" class="text-center">@(item.discount.ToString() + "%")</td>
                                    <td id="description-@item.id" class="text-center">@item.description</td>
                                    <td id="status-@item.id">@(item.status == 0 ? "Pending" : "Approved" )</td>

                                    <td>
                                        <a href="#" class="btn btn-primary btn-block btn-approve" data-id="@item.id">APPROVE</a>
                                    </td>

                                    <td>
                                        <a href="#" class="btn btn-warning btn-block btn-reject" data-id="@item.id">REJECT</a>
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="/Account/Add">ADD</a>
                    <a class="btn btn-primary" href="/Account/SendMail">Send Mail</a>
                </div>
            </div>
        </div>
    </div>
</div>

