@using WebApp.Common
@model IEnumerable<WebApp.Models.Product>
@{
    ViewBag.Title = "Index";
}

@section Styles{
    @Styles.Render("~/Content/AdminCss")

    <!----webfonts--->
    <link href='//fonts.googleapis.com/css?family=Cabin:400,400italic,500,500italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
    <!---//webfonts--->
    <!-- Meters graphs -->
    <!-- Placed js at the end of the document so the pages load faster -->
}

@section Scripts{
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <!-- chart -->
    <script src="~/Content/Admin/js/Chart.js"></script>
    <!-- //chart -->
    <script src="~/Content/Admin/js/wow.min.js"></script>

    <!--//end-animate-->
    <script src="~/Content/Admin/js/jquery-1.10.2.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/media/js/jquery.dataTables.js"></script>

}

@section JsFooter{
    
    <script src="~/Content/Admin/js/jquery.nicescroll.js"></script>
    <script src="~/Content/Admin/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
}

<div id="page-wrapper">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Account Manage</h3>
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <div class="responsive-table">
                    <table id="tblAccount" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="info">SELLER</th>
                                <th class="info">PRODUCT NAME</th>
                                <th class="info">IMAGE</th>
                                <th class="info">PRICE</th>
                                <th class="info">DISCOUNT</th>
                                <th class="info">DESCRIPTION</th>
                                <th class="info"></th>
                                <th class="info"></th>
                                <th class="info"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.sellerId</td>
                                    <td id="username-@item.id">@item.name</td>
                                    <td id="email-@item.id">image</td>
                                    <td id="address-@item.id">@(item.price.ToString("N0"))</td>
                                    <td id="email-@item.id">@(item.discount.ToString() + "%")</td>
                                    <td id="email-@item.id">@item.description</td>
                                    

                                    <td>
                                        <a href="#" class="btn btn-primary btn-block btn-admin" data-id="@item.id">aprreved</a>
                                    </td>

                                    <td>
                                        <a href="#" class="btn btn-warning btn-block btn-resetpassword" data-id="@item.id">reject</a>
                                    </td>

                                    <td>
                                        <a href="#" class="btn btn-danger btn-block btn-ban" data-id="@item.id">ban</a>
                                    </td>


                                </tr>

                                        }

                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="/Account/Add">ADD</a>
                    <a class="btn btn-primary" href="/Account/SendMail">Send Mail</a>
                </div>
            </div>
        </div>
    </div>
</div>

