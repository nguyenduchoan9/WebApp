@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    if ("Admin".Equals(controller) || "Product".Equals(controller) 
        || "Account".Equals(controller) || "Order".Equals(controller)
        || "OrderDetail".Equals(controller))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if("Login".Equals(controller) || "Register".Equals(controller) || "ForgotPassword".Equals(controller))
    {
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    else if ("HomePage".Equals(controller))
    {
        Layout = "~/Views/Shared/_HomePageLayout.cshtml";
    }
    else
    {
        Layout = null;
    }
}
